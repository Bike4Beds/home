                       loginErrors.modal({ show : false, keyboard : true, backdrop : true });
                       showLoginError = function(t, m)
                        {
                          $('.modal-alert .modal-header h3').text(t);
                          $('.modal-alert .modal-body p').text(m);
                          loginErrors.modal('show');
